pipeline{
    agent any

    parameters{
        choice(name: 'Release type', choice: ['Dev', 'QA'], description: 'this will select the type of release')
    }

    environment {
        VERSION = '1.0.0'
        RELEASE_VERSION = '2.3.4'
    }
    stages{
        stage('tools'){
            steps{
                echo "executing first stage"
                getTools()
            }
        }
        stage('test'){
            steps{
                   dir('./maven-samples/single-module'){
                   echo "executing second stage"
                   bat 'mvn test'
                }             
            }
        }
        stage('build'){
            steps{
                echo "executing third stage"
                bat 'mvn -f ./maven-samples/single-module/pom.xml clean package'
                echo "The current version : ${VERSION}"
            }
        }
        stage('Publish') {
            steps {
                archiveArtifacts('**/*.jar')
            }
        }
    }
}
    void getTools(){
        bat 'dir'
                bat '''
                java --version
                git --version
                mvn --version 
                '''
    }

   
